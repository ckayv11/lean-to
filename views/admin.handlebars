    <div class="container" id="user-container">
        <div class="row">
            <div class="card-panel">
                <div class="row">

                    <div class="col s12 m6">
                        <h4>Volunteers:</h4>
                        <table>
                            <thead>
                                <tr>
                                    <th><strong>First Name:</strong></th>
                                    <th><strong>Last Name:</strong></th>
                                    <th><strong>State:</strong></th>
                                    <th><strong>Role:</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each users}}
                                {{#if this.isVolunteer}}
                                <tr>
                                    <th>{{this.first_name}}</th>
                                    <th>{{this.last_name}}</th>
                                    <th>{{this.state}}</th>
                                    <th>{{this.role}}</th>
                                </tr>
                                {{/if}}
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                    <div class="col s12 m6">
                        <h4>Requesters:</h4>
                        <table>
                            <thead>
                                <tr>
                                    <th>First Name:</th>
                                    <th>Last Name:</th>
                                    <th>State:</th>
                                    <th>Role:</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each users}}
                                {{#if this.isVolunteer}}
                                <tr>
                                    <th>{{this.first_name}}</th>
                                    <th>{{this.last_name}}</th>
                                    <th>{{this.state}}</th>
                                    <th>{{this.role}}</th>
                                </tr>
                                {{/if}}
                                {{/each}}
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>
        </div>
    </div>