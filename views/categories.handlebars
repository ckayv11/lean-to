  {{!-- {{#if result.articles}} --}}
  
  <div class="row container results-body">
    {{#each result}}
      <div class="col s12 m6 l4 article-card">
        <a target="blank" href="{{this.url}}">
        <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <img src="{{this.urlToImage}}" alt="article"></div>
        </div>
          <div class="card-content center-align">
            <p>{{this.publishedAt}}</p>
            <span>{{this.title}}</span>
            <p>By: {{this.author}}</p>
          </div>
        </a>
      </div>
      <br>
        {{/each}}
  </div>


