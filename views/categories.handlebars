{{!-- Article Results go here dynamically using API and javascript--}}
  
  <div class="container results-body">
    <div class="row">
      {{#each result}}
      <div class="col s12 m6 l4 article-card">
        <a target="blank" href="{{this.url}}">
        <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <img src="{{this.urlToImage}}" alt="article"></div>
        </div>
          <div class="card-content center-align">
            <p>{{this.publishedAt}}</p>
            <span><h6>{{this.title}}</h6></span>
            <p>By: {{this.author}}</p>
          </div>
        </a>
      </div>
      {{/each}}
    </div>
  </div>


